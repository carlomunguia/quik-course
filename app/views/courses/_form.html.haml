-# frozen_string_literal: true
= simple_form_for(@courses) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :description
    = f.rich_text_area :description
    = f.input :short_description
    = f.input :language, as: :select, collection: ["English", "Japanese", "Nahuatl"]
    = f.input :level, as: :select, collection: ["Beginner", "Intermediate", "Advanced"]
    = f.input :price

  %br
  .form-actions
    = f.button :submit

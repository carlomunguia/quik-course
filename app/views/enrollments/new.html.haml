- content_for :title do
  QuikCourse
  \|
  New Enrollment

.card
  .card-header
    %h3
      .fa.fa-school
      = link_to @course.title, course_path(@course)
      %hr
      .fa.fa-lock-open
      New Enrollment
  .card-body
    = form_tag course_enrollments_path(@course) do
      = submit_tag "Buy Course for #{number_to_currency(@course.price)}", class: "btn btn-lg btn-success"
  .card-footer
    = link_to 'Back', enrollments_path

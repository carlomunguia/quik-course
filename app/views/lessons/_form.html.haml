-# frozen_string_literal: true
= simple_form_for([@course, @lesson]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    -# = f.input :content
    = f.label :content
    = f.rich_text_area :content

  %p
  .form-actions
    = f.button :submit
